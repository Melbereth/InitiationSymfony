{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
    
        {% if editMode %}
            <h1>Editer</h1>
        {% else %}
             <h1>New article</h1>                
        {% endif %}

    {{ form_start(formArticle) }}

    {{ form_row(formArticle.title, {'attr' : {'placeholder': "Titre de l'article"}}) }}
    {{ form_row(formArticle.category)}}
    {{ form_row(formArticle.content, {'attr' : {'placeholder': "Contenu"}}) }}
    {{ form_row(formArticle.image, {'attr' : {'placeholder': "L'image"}}) }}

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Enregistrer
        {% else %}
             Ajouter                
        {% endif %}
        
   
    </button>

    {{ form_end(formArticle) }}

{% endblock %}